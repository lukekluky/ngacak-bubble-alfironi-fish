<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amikomgamedev.bubblefish"
    android:versionCode="101"
    android:versionName="1.0.1" 
    android:installLocation="preferExternal">

    <uses-sdk android:minSdkVersion="8" />

    <supports-screens 
    android:smallScreens="true"
    android:normalScreens="true"
    android:largeScreens="true"    
    />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/Bubble_Fish" >
        <activity android:name=".state.StateLogoAGD">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".state.StateMenumain"></activity>
        <activity android:name=".state.StateGameplay"></activity>
         <activity android:name=".state.StateScore"></activity>
        <activity android:name=".state.StateCredit"></activity>
        <activity android:name=".state.StateLogoBubbleFish"></activity>
        <activity android:name=".state.StateHelp"></activity>
         <activity android:name=".state.State_IntroMenu"></activity>
         <activity android:name="com.amikomgamedev.bubblefish.state.StateHighscore"></activity>
    </application>

</manifest>